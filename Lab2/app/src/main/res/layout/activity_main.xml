<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lctpc.com.mx.lab2.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cel"
        android:id="@+id/celsius"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="149dp"
        android:background="@color/b1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/far"
        android:id="@+id/fahrenheit"
        android:layout_alignTop="@+id/celsius"
        android:layout_centerHorizontal="true"
        android:background="@color/b1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kel"
        android:id="@+id/kelvin"
        android:layout_alignTop="@+id/fahrenheit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/b1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/fahrenheit"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:background="@color/resultado"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:hint="Ingresa numero en Celsius"
        android:background="@color/text"/>
</RelativeLayout>
